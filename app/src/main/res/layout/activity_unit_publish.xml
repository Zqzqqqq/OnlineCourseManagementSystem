<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherCoursesActivity">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_publish_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="发布新单元" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_properties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="单元名"
                style="@style/text_course_info"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/input_box_style">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/unit_name"
                    style="@style/edit_text_style"
                    />
            </LinearLayout>

            <TextView
                android:text="单元简介"
                style="@style/text_course_info"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/input_box_style">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/unit_introduction"
                    style="@style/edit_text_style"
                    />
            </LinearLayout>

            <TextView
                android:text="单元教案"
                style="@style/text_course_info"
                />

            <TextView
                android:text="课程视频"
                style="@style/text_course_info"
                />

            <TextView
                android:text="单元习题"
                style="@style/text_course_info"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/textview_press2"
            android:clickable="true"
            android:paddingVertical="10dp"
            android:paddingLeft="20sp"
            android:text="清空"
            android:gravity="center"
            android:textColor="#3CB371"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/textview_press2"
            android:clickable="true"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>