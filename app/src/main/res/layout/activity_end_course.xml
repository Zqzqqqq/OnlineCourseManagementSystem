<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/end_course_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC">

            <ImageButton
                android:id="@+id/end_course_btn_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_back"
                />

            <TextView
                android:id="@+id/end_course_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="10dp"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="结课" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_course_info"
                android:layout_width="152dp"
                android:text="学情分析" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:src="@drawable/grade_analyse"
            />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                style="@style/text_course_info"
                android:layout_width="152dp"
                android:text="发布预警" />

            <Button
                android:id="@+id/btn_alert_select"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="恢复默认" />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_end_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:overScrollMode="never" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >
            <TextView
                android:id="@+id/text_end_course_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/textview_press2"
                android:clickable="true"
                android:paddingVertical="10dp"
                android:paddingLeft="20sp"
                android:text="保存"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_end_course_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_press2"
                android:clickable="true"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="发送预警"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text_end_course_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/textview_press2"
            android:clickable="true"
            android:paddingVertical="10dp"
            android:paddingLeft="20sp"
            android:text="清空"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_end_course_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/textview_press2"
            android:clickable="true"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="确认结课"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>