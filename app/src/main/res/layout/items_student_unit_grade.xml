<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        />
    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/tv_student_unit_grade_name"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="刘雨鑫"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_student_unit_grade_choice"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="19"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_student_judgement_grade"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="30"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_student_completion_grade"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="30"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_student_subjective_grade"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="30"
            android:textSize="22sp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="主观题"
            android:id="@+id/btn_show_subjective_dialog"
            />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        />


</LinearLayout>