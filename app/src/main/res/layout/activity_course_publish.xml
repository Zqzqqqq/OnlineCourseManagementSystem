<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/back"
                 />

            <TextView
                android:id="@+id/title_publish_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="10dp"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="发布新课程" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/scroll_properties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="课程名"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/course_name"
                        style="@style/edit_text_style"
                        />
                </LinearLayout>

                <TextView
                    android:text="课程类型"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <Spinner
                        android:id="@+id/course_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:theme="@style/spinner_style"
                        android:entries="@array/course_types"
                        />
                </LinearLayout>

                <TextView
                    android:text="课程介绍"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/course_introduction"
                        style="@style/edit_text_style"
                        android:maxLines="5"
                        />
                </LinearLayout>

                <TextView
                    android:text="课程大纲"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/course_outline"
                        style="@style/edit_text_style"
                        android:maxLines="5"
                        />
                </LinearLayout>

                <TextView
                    android:text="考评方式"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/course_examine"
                        style="@style/edit_text_style"
                        android:maxLines="3"
                        />
                </LinearLayout>

                <TextView
                    android:text="参考书目"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/course_books"
                        style="@style/edit_text_style"
                        android:maxLines="2"
                        />
                </LinearLayout>

                <TextView
                    android:text="选课开始时间"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <TextView
                        android:id="@+id/course_time_choose_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/edit_text_style"
                        android:paddingVertical="5dp"
                        />
                </LinearLayout>

                <TextView
                    android:text="选课截止时间"
                    style="@style/text_course_info"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <TextView
                        android:id="@+id/course_time_choose_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/edit_text_style"
                        android:paddingVertical="5dp"
                        />
                </LinearLayout>

                <TextView
                    android:text="课程正式开始时间"
                    style="@style/text_course_info" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <TextView
                        android:id="@+id/course_time_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/edit_text_style"
                        android:paddingVertical="5dp" />
                </LinearLayout>

                <TextView
                    android:text="课程结束时间"
                    style="@style/text_course_info" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/input_box_style">

                    <TextView
                        android:id="@+id/course_time_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/edit_text_style"
                        android:paddingVertical="5dp" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/textview_press2"
                android:clickable="true"
                android:paddingVertical="10dp"
                android:paddingLeft="20sp"
                android:text="清空"
                android:gravity="center"
                android:textColor="#3CB371"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/textview_press2"
                android:clickable="true"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="确定"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>