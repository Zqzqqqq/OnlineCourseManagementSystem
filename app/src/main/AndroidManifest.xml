<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zhouqi.onlinecourseapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineCourseApp">
        <activity
            android:name=".Student.ReminderActivity"
            android:exported="true" />

        <activity
            android:name=".PublishCourseActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".TeacherCoursesActivity"
            android:exported="true" />

        <activity
            android:name=".Student.StuMainActivity"
            android:exported="true"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>